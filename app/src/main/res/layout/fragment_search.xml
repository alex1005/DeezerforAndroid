<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mvp.SearchFragment">

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_on_deezer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/default_margin"
        android:drawableStart="@drawable/ic_baseline_arrow_back_24"
        android:drawableEnd="@drawable/ic_baseline_clear_24"
        android:background="@drawable/search_form_background"
        android:paddingEnd="10dp"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/poppins_400"
        android:elevation="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:importantForAutofill="no"
        android:inputType="text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcSearchSuggestions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSearch"
        tools:itemCount="10"
        tools:listitem="@layout/search_suggestion_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</androidx.constraintlayout.widget.ConstraintLayout>