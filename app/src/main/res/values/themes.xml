<resources>
    <!-- Base application theme. -->
    <style name="Theme.DeezerForAndroid" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Theme.DeezerForAndroid.Toolbar</item>
        <item name="actionBarStyle">@style/Theme.DeezerForAndroid.ActionBar</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/poppins_500</item>
    </style>

    <style name="Theme.DeezerForAndroid.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="elevation">0dp</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.DeezerForAndroid.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="elevation">0dp</item>
    </style>
</resources>