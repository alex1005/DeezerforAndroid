<resources>
    <!-- Base application theme. -->
    <style name="Theme.DeezerForAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Theme.DeezerForAndroid.Toolbar</item>
        <item name="actionBarStyle">@style/Theme.DeezerForAndroid.ActionBar</item>
        <item name="android:textViewStyle">@style/Theme.DeezerForAndroid.TextView.Basic</item>
        <item name="colorControlHighlight">@color/color_primary_variant</item>
        <item name="materialButtonStyle">@style/Theme.DeezerForAndroid.Button</item>
        <item name="actionButtonStyle">@style/Theme.DeezerForAndroid.ActionButton</item>
        <item name="imageButtonStyle">@style/Theme.DeezerForAndroid.ImageButton</item>
    </style>

    <style name="Theme.DeezerForAndroid.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.DeezerForAndroid.ActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.DeezerForAndroid.Button" parent="Widget.MaterialComponents.Button">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="rippleColor">@color/color_primary_variant</item>
    </style>

    <style name="Theme.DeezerForAndroid.ImageButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="rippleColor">@color/color_primary_variant</item>
    </style>

    <style name="Theme.DeezerForAndroid.ActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:background">@drawable/action_item_background</item>
    </style>
</resources>