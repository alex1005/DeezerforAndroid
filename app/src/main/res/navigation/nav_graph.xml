<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navGraph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.alexjprog.deezerforandroid.ui.mvvm.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/actionOpenMoreContentFromHome"
            app:destination="@id/moreContentFragment" />
        <action
            android:id="@+id/actionOpenSearchFromHome"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/moreContentFragment"
        android:name="com.alexjprog.deezerforandroid.ui.mvvm.MoreContentFragment"
        android:label="fragment_more_content"
        tools:layout="@layout/fragment_more_content">
        <argument
            android:name="category"
            app:argType="com.alexjprog.deezerforandroid.model.ContentCategory" />
        <action
            android:id="@+id/actionOpenSearchFromMore"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_moreContentFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.alexjprog.deezerforandroid.ui.mvp.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/editorialFragment"
        android:name="com.alexjprog.deezerforandroid.ui.mvvm.EditorialFragment"
        android:label="EditorialFragment">
        <action
            android:id="@+id/actionOpenSearchFromEditorial"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/actionOpenMoreContentFromEditorial"
            app:destination="@id/moreContentFragment" />
        <action
            android:id="@+id/action_editorialFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.alexjprog.deezerforandroid.ui.mvp.PlayerFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player">
        <argument
            android:name="playableMediaId"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="playableMediaType"
            app:argType="com.alexjprog.deezerforandroid.model.MediaTypeParam"
            android:defaultValue="NONE" />
    </fragment>
</navigation>